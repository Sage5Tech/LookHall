@model List<Website.Models.Venue>
@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/indexcss.css" rel="stylesheet" />

<div class="col-sm-12"><br /></div>


<div class="maincontent">

    <br />
    <br />
    <br />

    <br />
    <br />
    <div class="row row">

        <h1>LOOKHALL.COM</h1>
        <br />
        <br />
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div class="col-lg-12">
                <div class="form-group col-sm-4">
                    <label>Area</label>
                    @Html.DropDownList("Area", "Choose Area")
                </div>

                <div class="form-group col-sm-4 ">
                    <label>HallCategory</label>
                    @Html.DropDownList("HallType", "Choose Hall Category")
                </div>

                <div class="form-group col-sm-4 ">
                    <label>PriceRange</label>
                    <select name="PriceRange" id ="PriceRange" class = "form-control">
                        <option value="5000-1000">5000-1000</option>
                        <option value="11000-15000">11000-15000</option>
                        <option value="20000-25000">20000-25000</option>
                    </select>
                    @*//@Html.DropDownList("PriceRange")*@
                    <br />
                    <br />
                </div>
                <div class="box-footer">
                    <br />
                    <center>
                        <button type="submit" class="btn btn-lg btn-danger">SEARCH HALLS</button>
                    </center>
                </div>

                <br />
                <br />
            </div>
        }
    </div>
    @{if (Model.Any())
    {


        <table class="table">
            <thead>
                <tr>
                    <th>
                        Area
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Area.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
            }

            </tbody>
        </table>
    }}

</div>
